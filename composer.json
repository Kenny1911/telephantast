{
    "description": "Telephantast Monorepo",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov.valentin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-pcntl": "*",
        "amphp/amp": "^3.0",
        "bunny/bunny": "^0.5.5",
        "psr/clock": "^1.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "react/async": "^4.2",
        "react/event-loop": "^1.5",
        "react/promise": "^2.11",
        "revolt/event-loop-adapter-react": "^1.1"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8.2",
        "ergebnis/composer-normalize": "^2.42.0",
        "friendsofphp/php-cs-fixer": "^3.57.1",
        "phpunit/phpunit": "^11.1.3",
        "phpyh/coding-standard": "^2.6.1",
        "symfony/var-dumper": "^7.0.7"
    },
    "autoload": {
        "psr-4": {
            "Telephantast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Telephantast\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "ergebnis/composer-normalize": true
        },
        "lock": false,
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true,
            "target-directory": "tools"
        }
    },
    "scripts": {
        "check-require": [],
        "fixcs": "php-cs-fixer fix -v",
        "normalize-all": [],
        "pre-command-run": "mkdir -p var",
        "psalm": "tools/psalm/vendor/bin/psalm --show-info --no-diff",
        "test": "phpunit",
        "validate-all": []
    }
}
